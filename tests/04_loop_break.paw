// 测试 4: loop 和 break 关键字

fn count_to_n(n: i32) -> i32 {
    let mut count = 0;
    
    loop {
        count += 1;
        if count >= n {
            break;
        }
    }
    
    count
}

fn loop_conditional() -> i32 {
    let mut sum = 0;
    let mut i = 0;
    
    loop if i < 10 {
        sum += i;
        i += 1;
    }
    
    sum
}

fn main() -> i32 {
    let r1 = count_to_n(5);
    let r2 = loop_conditional();
    r1 + r2
}


